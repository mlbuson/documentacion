  "sections": [
    {
      "title": "1. Ingresar a la consola de administración de JBoss",
      "description": "Acceso inicial al panel de control del servidor JBoss EAP 7.4",
      "importance": "Alta",
      "steps": [
        {
          "number": 1,
          "text": "Abrir el navegador web (preferentemente Chrome o Firefox en sus últimas versiones)",
          "details": "Versiones mínimas soportadas: Chrome 85+, Firefox 78+"
        },
        {
          "number": 2,
          "text": "Ingresar a la URL de administración: https://jboss-admin.corp.cablevision.com.ar:9990",
          "details": "Puerto 9990 para acceso administrativo",
          "warning": "No utilizar HTTP, solo HTTPS",
          "image": "image1.png",
          "alt": "Pantalla de acceso al JBoss",
          "caption": "Figura 1: Pantalla de autenticación"
        },
        {
          "number": 3,
          "text": "Ingresar credenciales de acceso:",
          "details": {
            "username": "admin_jboss_prod",
            "password_rules": "Complexity level 4 requerido"
          },
          "note": "Las credenciales son personales e intransferibles"
        }
      ]
    },
    {
      "title": "2. Navegación en la consola",
      "description": "Reconocimiento de la interfaz administrativa",
      "steps": [
        {
          "number": 1,
          "text": "Al ingresar correctamente, se mostrará el dashboard principal con:",
          "items": [
            "Estado de servidores",
            "Métricas de rendimiento",
            "Alertas activas"
          ],
          "image": "image2.png",
          "caption": "Figura 2: Vista general del dashboard"
        },
        {
          "number": 2,
          "text": "En el menú lateral izquierdo ubicar las secciones principales:",
          "items": [
            "Runtime (Monitorización en tiempo real)",
            "Deployments (Gestión de aplicaciones)",
            "Configuration (Ajustes del servidor)",
            "Administration (Tareas administrativas)"
          ]
        }
      ]
    },
    {
      "title": "3. Gestión de Server Groups",
      "description": "Administración de grupos de servidores para despliegues",
      "critical": true,
      "steps": [
        {
          "number": 1,
          "text": "Seleccionar la pestaña 'Runtime' en el menú principal",
          "image": "image3.png",
          "caption": "Figura 3: Menú de navegación"
        },
        {
          "number": 2,
          "text": "Hacer clic en 'Server Groups' para ver los grupos configurados",
          "details": "Los principales grupos son: PROD_FM, PROD_CC, PROD_GM"
        },
        {
          "number": 3,
          "text": "Para detener un grupo:",
          "substeps": [
            "Seleccionar el grupo deseado",
            "Clic en el menú desplegable (ícono ▼)",
            "Seleccionar 'Stop'",
            "Confirmar la acción"
          ],
          "image": "image4.png",
          "caption": "Figura 4: Detención de Server Group",
          "warning": "Verificar que no hay usuarios conectados antes de detener"
        }
      ]
    },
    {
      "title": "4. Despliegue de aplicaciones",
      "description": "Procedimiento completo para deployar WARs",
      "steps": [
        {
          "number": 1,
          "text": "Navegar a la pestaña 'Deployments'",
          "image": "image5.png"
        },
        {
          "number": 2,
          "text": "Deshabilitar la versión actual:",
          "substeps": [
            "Localizar el WAR activo (indicado con ícono verde)",
            "Seleccionar 'Disable' en el menú de acciones"
          ],
          "image": "image6.png"
        },
        {
          "number": 3,
          "text": "Cargar nueva versión:",
          "substeps": [
            "Seleccionar 'Add' > 'Upload Deployment'",
            "Seleccionar archivo WAR desde: S:/Publico/jboss/deploys/",
            "Especificar nombre y versión",
            "Confirmar la carga"
          ],
          "image": "image7.png",
          "note": "El tamaño máximo permitido es 250MB"
        },
        {
          "number": 4,
          "text": "Habilitar el nuevo deployment:",
          "substeps": [
            "Seleccionar el WAR recién cargado",
            "Elegir 'Enable' en el menú de acciones",
            "Asignar al Server Group correspondiente"
          ]
        }
      ]
    },
    {
      "title": "5. Verificación post-despliegue",
      "description": "Validación del despliegue exitoso",
      "steps": [
        {
          "number": 1,
          "text": "Verificar en 'Runtime' > 'Server Groups' que:",
          "items": [
            "El estado sea 'Started'",
            "No haya errores en el log",
            "La versión mostrada sea la correcta"
          ]
        },
        {
          "number": 2,
          "text": "Realizar pruebas funcionales básicas:",
          "items": [
            "Acceso a URLs principales",
            "Pruebas de autenticación",
            "Operaciones críticas"
          ]
        }
      ]
    },
    {
      "title": "6. Procedimiento de Rollback",
      "description": "Revertir a versión anterior en caso de fallos",
      "emergency": true,
      "steps": [
        {
          "number": 1,
          "text": "Detener el Server Group afectado"
        },
        {
          "number": 2,
          "text": "Navegar a 'Deployments'"
        },
        {
          "number": 3,
          "text": "Deshabilitar la versión problemática"
        },
        {
          "number": 4,
          "text": "Habilitar la versión anterior estable"
        },
        {
          "number": 5,
          "text": "Reiniciar el Server Group"
        },
        {
          "number": 6,
          "text": "Documentar el incidente en el sistema de tickets"
        }
      ]
    }
  ],
